<Window x:Class="SimpleRegistrationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleRegistrationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row ="0" Content="Регистрация" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" Text="Имя:" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-120 0 0 0" FontSize="10" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Name="name" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Margin="75 0 0 0"/>
        <TextBlock Grid.Row="2" Text="Возраст:" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-103 0 0 0" FontSize="10" FontWeight="Bold"/>
        <TextBox Grid.Row="2" Name="age" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Margin="75 0 0 0"/>
        <TextBlock Grid.Row="3" Text="Пароль:" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-103 0 0 0" FontSize="10" FontWeight="Bold"/>
        <PasswordBox Grid.Row="3" Name="password" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Margin="75 0 0 0"/>
        <Button Grid.Row="4" Content="Зарегистрироваться" Height="20" Width="110" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="55 0 0 0 " Click="Button_Click"/>
    </Grid>
</Window>
